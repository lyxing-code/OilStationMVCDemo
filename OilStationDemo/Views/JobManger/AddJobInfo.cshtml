
@{
    Layout = null;
}
<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>职位管理</title>
    <link href="~/layui/css/layui.css" rel="stylesheet" />
    <link href="~/layui/css/global.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/Common.js"></script>
    <script src="~/layui/layui.js"></script>
    <script src="~/layui/layui.all.js"></script>
</head>

<body style="width: auto;">
    <form class="layui-form" id="addForm">
        <div class="layui-form-item"></div>
        <div class="layui-form-item">
            <label class="layui-form-label">职位名称</label>
            <div class="layui-input-inline">
                <input type="text" name="Name" id="txtName" required lay-verify="required" autocomplete="off" class="layui-input">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">职位代码</label>
            <div class="layui-input-inline">
                <input type="text" name="Code" id="txtCode" required lay-verify="required" autocomplete="off" class="layui-input">
            </div>
        </div>

        <div class="layui-form-item">
            <div class="layui-input-block">
                <button class="layui-btn" lay-submit="" id="btnAddJob" lay-filter="formInput" data-form-sbm="1524446636424.743" style="pointer-events: auto;">保存</button>
                <button type="reset" class="layui-btn layui-btn-primary">重置</button>
            </div>
        </div>
    </form>
    <script>

        layui.use('form', function () {
            var form = layui.form;
            //监听提交
            form.on('submit(formInput)', function (data) {
                AjaxRequest();
                return false;
            })

        });

        function AjaxRequest() {
            //请求时 前台等待
            var index = layer.load(3);
            $.post("/JobManger/AddJobInfo", $("#addForm").serialize(), function (d, s) {
                if (d == "T") {
                    layer.msg("添加操作成功!", CloseLayerWindown());
                    //重新刷新父界面中的表格数据 test为父窗口中表格的id号													
                    parent.layui.table.reload('test');

                } else {
                    layer.msg("添加操作失败!", CloseLayerWindown());
                }
            }).done(function () {
                layer.close(index);//请求完毕 关闭
            });


        }

    </script>
</body>
</html>
